global:
  scrape_interval: 5s
  evaluation_interval: 5s

alerting:
  alertmanagers:
    - static_configs:
        - targets: ['alertmanager:9093']

rule_files:
  - 'rules/1.basic.yml'

scrape_configs:
  # Prometheus se monitorea a sí mismo
  - job_name: 'prometheus'
    static_configs:
      - targets: ['prometheus:9090']

  # Node exporter (métricas del host)
  - job_name: 'node'
    static_configs:
      - targets: ['node-exporter:9100']